alias ..="cd .."
alias .="cd ."
alias la="ls -A"
alias ll="ls -lh"
alias dof="/opt/local/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME"
alias less="less -R"

alias goCode="cd $CODEPATH"
alias goDotfiles="cd $HOME/.dotfiles"

alias mv="mv -i"
alias n="nvim"
alias please='sudo $(fc -ln -1)'
alias rm="rm -i"
alias tlmgr="$TEXMFDIST/scripts/texlive/tlmgr.pl --usermode"

# Git aliases
alias ga="git add"
alias gaa="git add ."
alias gb="git branch"
alias gc="git commit"
alias gcm="git commit -m"
alias glo="git log --oneline --graph --decorate"
alias glog="\git log --color --all --date-order --decorate\
	--dirstat=lines,cumulative \
	--stat | sed 's/\([0-9] file[s]\? .*)$\)/\1\n_______\n-------/g' | less -R"
alias gm="git merge"
alias gp="git push"
alias gpl="git pull"
alias gs="git status"
alias gss="git status -s"
alias gsw="git switch"
alias gt="git tag --sort version:refname"
alias ggcp="git gc --prune=\"0 days\""

alias ypr="yarn prod"
alias yw="yarn watch"
alias yyw="yarn && yarn watch"
alias yd="yarn dev"
alias ys="yarn start"
alias yys="yarn && yarn start"
alias yb="yarn build"
alias yyb="yarn && yarn build"
alias yyd="yarn && yarn dev"
alias yd="yarn dev"

alias k="kubectl"
alias kp="kubectl get pods"
alias kd="kubectl get deployments"

alias sail='sh $([ -f sail ] && echo sail || echo vendor/bin/sail)'
