alias ..="cd .."
alias .="cd ."
alias la="ls -A"
alias ll="ls -lh"
alias dof="/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME"

alias goBlog="cd $BLOGPATH"
alias goJW="cd $JWPATH"
alias goCode="cd $CODEPATH"
alias goWork="cd $WORKPATH"
alias goDotfiles="cd $HOME/.dotfiles"

alias mv="mv -i"
alias n="nvim"
alias please='sudo $(fc -ln -1)'
alias rm="rm -i"
alias tlmgr="$TEXMFDIST/scripts/texlive/tlmgr.pl --usermode"

# Git aliases
alias ga="git add"
alias gaa="git add ."
alias gb="git branch"
alias gc="git commit"
alias gcm="git commit -m"
alias glo="git log --oneline --graph --decorate"
alias glog="\git log --color --all --date-order --decorate\
	--dirstat=lines,cumulative \
	--stat | sed 's/\([0-9] file[s]\? .*)$\)/\1\n_______\n-------/g' | less -R"
alias gm="git merge"
alias gp="git push"
alias gpl="git pull"
alias gs="git status"
alias gss="git status -s"
alias gsw="git switch"
alias gt="git tag --sort version:refname"
alias ggcp="git gc --prune=\"0 days\""

alias lserve="php -S localhost:8000 -t public"
alias sail="[ -f sail ] && bash sail || bash vendor/bin/sail"
alias queue="sail artisan queue:work"
alias serve="WWWUSER=$(id -u) docker-compose up"
alias tinker="sail artisan tinker"
# alias tinker="docker exec -it alpha-laravel.test-1 php artisan tinker"

alias sym="bin/console"

alias ypr="yarn prod"
alias yw="yarn watch"
alias yyw="yarn && yarn watch"

alias bserve="browser-sync start -s -f . --no-notify\
	--host $(hostname -i | cut -d' ' -f1)"

alias phpunit="./vendor/bin/phpunit"
