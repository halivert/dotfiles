# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  output_format = i3bar
  colors = true
  interval = 5
  color_good =     "#0EC07C"
  color_degraded = "#FABD2F"
  color_bad =      "#FB4934"
}

# order += "ipv6"
order += "wireless wlo1"
order += "ethernet _first_"
order += "battery 0"
# order += "disk /"
# order += "load"
# order += "memory"
order += "volume master"
order += "tztime local"

wireless wlo1 {
  format_up = " %essid (%quality)"
  format_down = " "
}

ethernet _first_ {
  format_up = "%speed"
  format_down = "E"
}

battery 0 {
  format = "%status %percentage"
  status_chr = " "
  status_bat = " "
  status_full = " "
  status_unk = " "
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 21
}

disk "/" {
  format = "%avail"
}

load {
  format = "%1min"
}

memory {
  format = "%used - %available"
  threshold_degraded = "1G"
  format_degraded = "MEMORY < %available"
}

tztime local {
  format = "%d-%m-%Y  %H:%M"
}

volume master {
  format = " %volume"
  format_muted = " "
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}
